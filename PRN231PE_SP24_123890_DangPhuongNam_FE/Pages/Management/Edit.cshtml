            </div>
            <div class="form-group">
                <label asp-for="WatercolorsPainting.PaintingAuthor" class="control-label"></label>
                <input asp-for="WatercolorsPainting.PaintingAuthor" class="form-control" />
                <span asp-validation-for="WatercolorsPainting.PaintingAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WatercolorsPainting.Price" class="control-label"></label>
